<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="base_length" value="1.0" />
    <xacro:property name="base_radius" value="0.06" />

    <!-- BASE LINK -->
    <link name="base_link"></link>

    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="0 0 0" rpy="0 ${pi/2} 0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="${base_radius}" length="${base_length}" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${base_radius}" length="${base_length}" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <xacro:cylinder_inertia m="5.0" r="${base_radius}" l="${base_length}"
            o_xyz="0 0 0" o_rpy="0 0 0" />
    </link>

    <!-- PROPELLER LINK -->
    <joint name="propeller_joint" type="continuous">
        <parent link="base_link" />
        <child link="propeller" />
        <origin xyz="-0.51 0 0" rpy="0 ${pi/2} 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="propeller">
        <visual>
            <geometry>
                <box size="0.2 0.02 0.01" />
            </geometry>
            <material name="orange" />
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.02 0.01" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <xacro:box_inertia m="0.02" x="0.2" y="0.02" z="0.01"
            o_xyz="0 0 0" o_rpy="0 0 0" />
    </link>

</robot>